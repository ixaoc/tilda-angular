@import url('https://fonts.googleapis.com/css?family=Noto+Sans:400,400i,700&amp;subset=cyrillic')

html
  font-family 'Noto Sans', sans-serif
  font-size 14px
  line-height 1.5

body
  margin 0
  background #f0f0f0
  
  &.is-hidden
    overflow hidden


.btn-list
  list-style none
  margin 0
  padding 0
  
  background-color #fff
  border 1px solid
  border-color #ccc
  border-radius 3px
  
  display table
  
  &__item
    border-right 1px solid
    border-color #ccc
    
    display table-cell
    vertical-align middle
    height 32px
  
    padding-top 1px
    padding-left 12px
    padding-right 12px
    font-size 13px
    line-height 13px
    font-weight 500
    cursor pointer
    
    transition background 0.15s ease
    
    &:last-child
      border-right 0
      
    &:hover
      background-color #e5e5e5
      
      
.editor
  &-block
    padding 12px 14px
  
    &__title
      margin 0
      font-size 20px
      margin-bottom 20px
      text-transform uppercase
      
    label
      font-size 13px
      line-height 16px
      font-weight 300
      letter-spacing 0.5px
      margin-bottom 0px
      color #000
      text-transform uppercase
      
    input
    textarea
      font-size 14px
      line-height 20px
      
      border 0
      border-bottom 1px solid #cccccc
      background transparent
      
      outline none
      
      width 100%
      
      box-sizing border-box
      
      padding 10px 0
      
      
    textarea
      height 120px
      
    select
      -webkit-appearance none
      -moz-appearance none
      position relative
      border-radius 0
      cursor pointer
    
      padding 0
      margin 0
      border 0
      border-bottom 1px solid #b5b5b5
      background transparent none repeat scroll 0% 0%
      font-size 18px
      font-weight 300
      color #000
      width 100%
      height 50px
      box-sizing border-box
      
      transition all ease-in-out 0.1s
      outline none !important
      
    input
    textarea
    select
      &:focus
      &:hover
        border-bottom-color #ff855d
        
    .select-wrapper
      position relative
      
      &:after
        content ""
        width 0
        height 0
        border-style solid
        border-width 6px 5px 0 5px
        border-color #9a9a9a transparent transparent transparent
        position absolute
        bottom 20px
        right 0
        
        transition all ease-in-out 0.1s
        
      &:hover
        &:after
          border-color #fa8e73 transparent transparent transparent
      
  &-field
    margin-bottom 35px
    

.form-box
  label
    font-size 12px
    line-height 10px
    color #000
    text-transform uppercase
    cursor default
    letter-spacing 1px
    
    transition color 0.2s ease
    
  .default-input
    padding 0
    margin 0
    border 0
    border-bottom 1px solid #b5b5b5
    background transparent none repeat scroll 0% 0%
    font-size 18px
    font-weight 300
    color #000
    width 100%
    height 50px
    box-sizing border-box
    outline none
    
    transition border 0.2s ease
    
    &:focus
      border-color #fa8e73 
      
  &:hover
    label
      color #fa8e73
      
    .default-input
      border-color #fa8e73
    
