.header
  display flex
  justify-content space-between
  align-items center
    
  height 60px
  background rgba(255, 255, 255, 0.95)
  box-shadow 0 0 10px rgba(0,0,0,0.1)
  
.waves
  height 100%
  
  img
    display block
    max-height 100%
    
.menu
  padding-left 24px
  
  a
    text-decoration none
    color #000
    text-transform uppercase
    font-size 12px
    cursor pointer
    
    transition color 0.2s ease, background 0.2s ease
    
    &:hover
      color #ff8562
      
  
     
  .arrow
    margin 0 10px 0 2px 
  
  &-list
    display flex
    line-height 60px
    
    &__item
      padding 0 12px
      
      
      &:hover
        background rgba(0,0,0,0.05)
        
      &--bold
        font-weight 700
        
        
.menu
  .menu
    &-list__item
      &.is-disable
        opacity 0.3
        
        &:hover
          background #fff
          color #000
          cursor inherit 
    
.empty-box
  flex auto
  
.loader
    text-align center
    padding 40px 16px
    
.projects
.current-project
  font-weight 700