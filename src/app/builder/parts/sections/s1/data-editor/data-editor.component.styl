.image-field
  
  position relative
  
  &--preview
    margin-top 25px
  
  
  &--uploaded
    margin-top 16px
    
    input
      width 0.1px
    	height 0.1px
    	opacity 0
    	overflow hidden
    	position absolute
    	z-index -1
    	
    label
      width 230px
      height 46px
      background #222
      color #fff
      text-transform inherit
      display inline-block
      border-radius 4px
      text-align center
      line-height 46px
      cursor pointer
      
      position relative
      
      &:active
        top 2px
  
  &__delete-btn
    position absolute
    right 0
    top 50%
    margin-top -10px
    
    cursor pointer

.image-preview
  max-width 120px
  
.delete-icon
  width 16px