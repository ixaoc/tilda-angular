:host
  text-align center
  color #fff

.component-content
  position relative
  
  display table
  width 100%
  padding 20px 0
  box-sizing border-box
  height 680px
  
  background-position center
  background-repeat no-repeat
  background-size cover
  
  &:before
    content ""
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0,0,0,0.4)
    
  &__inner
    display table-cell
    vertical-align middle
  
    
.content
  width 780px
  margin 0 auto
  
  position relative
  z-index 2
  
.company
  padding-bottom 60px
  padding-top 30px
  
  text-transform uppercase
    
  font-size 14px
  line-height 1.43
  letter-spacing 2.5px
  
.title
  padding 32px 0px 54px 0px
  letter-spacing 0.5px
  margin 0
    
  font-size 56px
  line-height 1.17
  
  
.subtitle
  padding 0px 0px 30px 0px
    
  font-size 20px
  line-height 1.50
  
  margin 0