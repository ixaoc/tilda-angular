.container
  width 980px
  margin 0 auto
  
  padding 40px 0

.header
  background #e7e7e7
  padding 32px 16px
  display table
  width 100%
  box-sizing: border-box
  
  &__container
    width 980px
    margin 0 auto
    display table
    
  
  &__title
    display table-cell
    font-size 18px
    color #555
    
  &__btn
    display table-cell
    text-align right
    
  &__settings-btn
    background #fff
    padding 16px 32px
    display inline-block
    border-radius 32px
    vertical-align middle
    cursor pointer
    
    img
    span
      vertical-align middle
      display inline-block
      
    img
      margin-right 12px
      
      
.pages
  list-style none
  padding 0
  
  &__item
    display table
    width 100%
    border-bottom 1px solid #a9a9a9
    padding 24px 0
    
    &:hover
      .pages__title
        color #fa8669
    
  &__title
    font-size 32px
    cursor pointer
    outline none
    
    transition color 0.15s ease
  
  &__btns
    width 120px
    text-align right
    
    img
      width 20px
      cursor pointer
      
        
  .cell
    display table-cell
    vertical-align middle
    
.pages__ava
  width 75px  
    
.ava
  width 75px
  height 75px
  margin-right 50px
  border-radius 50%
  border 1px solid #d5d5d5
  
  cursor pointer
  outline none
  
  
.pages-title
  color #BBB
  font-size 13px
  
  
  