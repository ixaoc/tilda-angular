clearfix()
  &:after
    content ""
    display table
    clear both 
    
.container
  width 980px
  margin 0 auto
  
  padding 60px 0
  
  
.nav
  clearfix()
  line-height 25px
  
  &__title
    opacity 0.5
  
.actions
  clearfix()
  float right
  
  &__link
    float left
    margin-left 24px
    
    text-decoration none
    color #333
    cursor pointer
    
    transition color 0.2s ease
    
    &:hover
      color #fa886e
      
    &.is-disable
      opacity 0.3
      color #333
      cursor inherit
      &:hober
        color #333
    
  &__icon
    background #fa886e
    
    border-radius 50%
    
    width 15px
    height 15px
    
    padding 5px
    
    float left
    margin-right 10px
    
.list
  clearfix()
  
  margin 20px -12px
  padding 0
  list-style none
  
  &__item
    display block
    float left
    box-sizing border-box
    
    width 50%
    padding 12px
    
    
    
.project
  width 100%
  height 265px
  
  background-color #fff
  border 1px solid #d9d9d9
  
  transition 200ms
  
  &:hover
    background-color transparent
  
  a
    text-decoration none
    transition 200ms
  
  &__header
    display block
    box-sizing border-box
    padding 30px 40px 0px 40px
    height 180px
    overflow hidden
    
    transition 200ms
    
  &__title
    font-size 44px
    font-weight 300
    color #000
    transition 200ms
    
    ^[-1]__header:hover &
      color #fa876b
    
  &__desc
    font-size 18px
    color #000
    opacity 0.5
    padding-top 5px
    margin 0
    
  
  &__hr
    height 1px
    margin 0 30px
    background-color #e5e5e5
  
  
  &-controls
    display table
    
    width 100%
    height 80px
    
    padding 0 40px
    box-sizing border-box
    
    &__inner
      clearfix()
      display table-cell
      vertical-align middle
      
    &__item
      color #000
      
      &:hover
        color #fa876b
      
      &:first-child
        float left
        
      &:last-child
        float right
        
    &__view
      opacity 0.3
      color #000
      cursor inherit
      
      &:hover
        color #000
  
  
.new-project
  background transparent
  border 1px dashed #ccc
  
  width 100%
  height 265px
  
  text-align center
  overflow hidden
  
  cursor pointer
  
  &:hover
    background #f7f7f7
  
  span
    font-size:240px
    text-align center
    
    line-height 236px
    display inline-block
    
  
  
.form-box
  margin-top 48px
  
.popup
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  
  padding 48px 24px
  
  background linear-gradient(to top right, rgba(227,101,87,0.8), rgba(238,174,117,0.9))
  overflow auto
  
  display none
  
  &.is-view
    display block
  

  &__content
    background #fff
    width 100%
    max-width 620px
    margin auto
    
    box-sizing border-box
    position relative
    
  &__close
    position absolute
    top 25px
    right 25px
    
    width 19px
    height 19px
    
    background url('https://tilda.cc/tpl/img/popups/all-icons.svg') no-repeat -58px -54px;
    cursor pointer
  
    &:hover
      background: url('https://tilda.cc/tpl/img/popups/all-icons-orange.svg') no-repeat -57px -50px;
  
  &-header
    background #f7f7f7
    padding 24px 36px
    border-bottom 1px solid #e5e5e5
    
    span
      font-size 18px
      color #000
  
      padding-right 25px
    
  &-content
    padding 0 36px 36px
   
    
    

    
    
.default-btn
  display inline-block
  position relative
  padding 10px 29px 11px
  margin 0
  border 1px solid #b7b7b7
  background #fff
  border-radius 100px
  font-size 15px
  color #000
  cursor pointer
  
  transition border 0.15s ease
    
  &--orange
    position relative
    display inline-block
    vertical-align top
    padding 9px 29px 11px
    border 1px solid #fa8669
    background #fa8669

    color #fff
    
  &:hover
    border-color #fa8669
    
  &.is-disable
    opacity 0.4
    cursor inherit
  
.form-box--table
  display table
  
.form-warning
  display table-cell
  vertical-align middle
  font-size 13px
  font-style italic
  color #777
  
.form-btns
  display table-cell
  width 310px
  text-align right
  margin-top 24px  
   
.default-btn--orange
  margin-left 6px 
    
  