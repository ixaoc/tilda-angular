clearfix()
  &:after
    content ""
    display table
    clear both 

header
  clearfix()
  background #000
  
  
.waves
  float left
  height 56px
  margin-right 20px
  
  img
    width 20px


.logo
  float left
  
  padding 11px
  height 56px
  width 56px
  box-sizing border-box


  &__link
    display block
    
    img
      max-width 100%
  
.menu

  &--left
    float left
  &--right
    float right
    
  a
    display inline-block
    
    border-bottom 2px solid transparent
    
    color #fff
    text-decoration none
    margin 0 16px
    
    letter-spacing 0.05em
    font-size 0.9rem
    
    line-height 54px
    
    transition border-color 0.15s ease, color 0.2s ease
    
    &:hover
      color #fa886e
      
    &.active
      border-bottom-color #fa886e
      
    &.is-disable
      opacity 0.3
      color #fff
      &:hover
        color #fff
      
      